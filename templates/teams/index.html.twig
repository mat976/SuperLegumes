{% extends 'base.html.twig' %}

{% block title %}Liste des Équipes
{% endblock %}

{% block body %}
	<h1>Liste des Équipes</h1>

	<table class="table">
		<thead>
			<tr>
				<th>Nom</th>
				<th>Leader</th>
				<th>Membres</th>
				<th>Statut</th>
				<th>Actions</th>
			</tr>
		</thead>
		<tbody>
			{% for team in teams %}
				<tr>
					<td>{{ team.name }}</td>
					<td>{{ team.leader.name }}</td>
					<td>{{ team.members|length }}</td>
					<td>{{ team.isActive ? 'Active' : 'Inactive' }}</td>
					<td>
						<a href="{{ path('app_teams_show', {'id': team.id}) }}" class="btn btn-sm btn-info">Voir</a>
						<a href="{{ path('app_teams_edit', {'id': team.id}) }}" class="btn btn-sm btn-primary">Modifier</a>
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="5">Aucune équipe trouvée</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>

	<a href="{{ path('app_teams_new') }}" class="btn btn-success">Créer une nouvelle équipe</a>
{% endblock %}
