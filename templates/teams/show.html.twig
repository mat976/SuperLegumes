{% extends 'base.html.twig' %}

{% block title %}Détails de l'Équipe
{% endblock %}

{% block body %}
	<h1>Détails de l'Équipe</h1>

	<table class="table">
		<tbody>
			<tr>
				<th>Nom</th>
				<td>{{ team.name }}</td>
			</tr>
			<tr>
				<th>Leader</th>
				<td>{{ team.leader.name }}</td>
			</tr>
			<tr>
				<th>Membres</th>
				<td>
					<ul>
						{% for member in team.members %}
							<li>{{ member.name }}</li>
						{% endfor %}
					</ul>
				</td>
			</tr>
			<tr>
				<th>Statut</th>
				<td>{{ team.isActive ? 'Active' : 'Inactive' }}</td>
			</tr>
		</tbody>
	</table>

	<a href="{{ path('app_teams_index') }}" class="btn btn-secondary">Retour à la liste</a>
	<a href="{{ path('app_teams_edit', {'id': team.id}) }}" class="btn btn-primary">Modifier</a>

	{{ include('teams/_delete_form.html.twig') }}
{% endblock %}
