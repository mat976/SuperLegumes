{% extends 'base.html.twig' %}

{% block title %}Détails de la Mission
{% endblock %}

{% block body %}
	<h1>Détails de la Mission</h1>

	<table class="table">
		<tbody>
			<tr>
				<th>Id</th>
				<td>{{ mission.id }}</td>
			</tr>
			<tr>
				<th>Titre</th>
				<td>{{ mission.title }}</td>
			</tr>
			<tr>
				<th>Description</th>
				<td>{{ mission.description }}</td>
			</tr>
			<tr>
				<th>Statut</th>
				<td>{{ mission.status }}</td>
			</tr>
			<tr>
				<th>Date de début</th>
				<td>{{ mission.startAt ? mission.startAt|date('Y-m-d H:i:s') : '' }}</td>
			</tr>
			<tr>
				<th>Date de fin</th>
				<td>{{ mission.endAt ? mission.endAt|date('Y-m-d H:i:s') : '' }}</td>
			</tr>
			<tr>
				<th>Lieu</th>
				<td>{{ mission.location }}</td>
			</tr>
			<tr>
				<th>Niveau de danger</th>
				<td>{{ mission.dangerLevel }}</td>
			</tr>
		</tbody>
	</table>

	<a href="{{ path('app_missions_index') }}" class="btn btn-secondary">Retour à la liste</a>

	<a href="{{ path('app_missions_edit', {'id': mission.id}) }}" class="btn btn-primary">Modifier</a>

	{{ include('missions/_delete_form.html.twig') }}
{% endblock %}
